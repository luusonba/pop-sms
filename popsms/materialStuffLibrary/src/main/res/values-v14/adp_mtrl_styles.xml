    <style name="Base.Widget.AlertDialogPro.Material.Light.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/adp_btn_mtrl_light</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">14sp</item>
